{
  "name": "api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "build": "rm -rf dist/ && ./node_modules/.bin/tsc",
    "build:docker": "docker-compose build",
    "lint": "eslint src --ext .ts",
    "coverage": "npm test -- --coverage --watchAll=false",
    "test": "jest --testTimeout 10000 --runInBand --verbose --logHeapUsage --forceExit --detectOpenHandles",
    "test:docker": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up --exit-code-from filebank",
    "test:deps": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up mongo localstack",
    "format": "npx prettier --write './src/**/*.ts'",
    "typecheck": "tsc --noEmit --project .",
    "before-commit": "npm run format"
  },
  "dependencies": {
    "ajv": "^8.5.0",
    "aws-sdk": "^2.918.0",
    "body-parser": "~1.19.0",
    "convict": "^6.1.0",
    "cookie-parser": "^1.4.5",
    "debug": "^4.3.3",
    "express": "^4.17.3",
    "express-jwt": "^6.0.0",
    "express-jwt-authz": "^2.4.1",
    "fs-extra": "^10.0.0",
    "glob": "^7.1.7",
    "is-invalid-path": "^1.0.2",
    "jsonschema": "^1.4.0",
    "lodash": "^4.17.21",
    "mongoose": "^5.12.12",
    "morgan": "~1.10.0",
    "multer": "^1.4.2",
    "validator.ts": "^0.2.2"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/bluebird": "^3.5.35",
    "@types/body-parser": "^1.19.0",
    "@types/convict": "^6.1.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.12",
    "@types/express-jwt": "6.0.4",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.1.3",
    "@types/jest": "^27.4.1",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/lodash": "^4.14.190",
    "@types/mongoose": "^5.10.5",
    "@types/morgan": "^1.9.2",
    "@types/multer": "^1.4.5",
    "@types/node": "^14.11.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "clear-require": "^3.0.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.0.3",
    "jsonwebtoken": "^8.5.1",
    "nyc": "^15.1.0",
    "prettier": "^2.3.0",
    "source-map-support": "^0.5.19",
    "supertest": "^6.0.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run before-commit"
    }
  },
  "lint-staged": {
    "*.{ts,js,css,json,md}": [
      "npm run format",
      "git add"
    ]
  }
}
