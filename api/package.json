{
  "name": "api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "build": "rm -rf dist/ && ./node_modules/.bin/tsc",
    "build:docker": "docker-compose build",
    "lint": "eslint src --ext .ts",
    "coverage": "npm test -- --coverage --watchAll=false",
    "test": "jest --testTimeout 10000 --runInBand --verbose --logHeapUsage --forceExit --detectOpenHandles",
    "test:docker": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up --exit-code-from filebank",
    "test:deps": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up mongo localstack",
    "format": "npx prettier --write './src/**/*.ts'",
    "typecheck": "tsc --noEmit --project .",
    "before-commit": "npm run format"
  },
  "dependencies": {
    "ajv": "^6.12.6",
    "aws-sdk": "^2.840.0",
    "body-parser": "~1.18.3",
    "convict": "^6.0.0",
    "cookie-parser": "^1.4.5",
    "debug": "^4.2.0",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "express-jwt-authz": "^2.4.1",
    "fs-extra": "^10.0.0",
    "glob": "^7.1.6",
    "is-invalid-path": "^1.0.2",
    "jsonschema": "^1.4.0",
    "lodash": "^4.17.21",
    "mongoose": "^5.10.7",
    "morgan": "~1.10.0",
    "multer": "^1.4.2",
    "validator.ts": "^0.2.2"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/bluebird": "^3.5.32",
    "@types/body-parser": "^1.19.0",
    "@types/convict": "^5.2.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.12",
    "@types/express-jwt": "0.0.42",
    "@types/fs-extra": "^9.0.2",
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.15",
    "@types/joi": "^13.6.3",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/lodash": "^4.14.170",
    "@types/mongoose": "^5.10.5",
    "@types/morgan": "^1.9.2",
    "@types/multer": "^1.4.4",
    "@types/node": "^14.11.2",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "clear-require": "^3.0.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^26.6.2",
    "jsonwebtoken": "^8.5.1",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "source-map-support": "^0.5.19",
    "supertest": "^6.0.0",
    "ts-jest": "^26.4.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run before-commit"
    }
  },
  "lint-staged": {
    "*.{ts,js,css,json,md}": [
      "npm run format",
      "git add"
    ]
  }
}
